source = ~/.config/hypr/variables.conf
source = ~/.config/hypr/autostart.conf
source = ~/.config/hypr/inputs.conf
source = ~/.config/hypr/binds.conf

source = ~/.config/hypr/monitors.conf

monitor=,preferred,auto,1

general {
  gaps_in = 3
  gaps_out = 3
  border_size = 3
  col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
  col.inactive_border = rgba(595959aa)

  resize_on_border = true
}

decoration {
  rounding = 0

  drop_shadow = true
  shadow_range = 2
  shadow_render_power = 1
  col.shadow = rgba(1a1a1aee)

  blur {
    enabled = false
    size = 3
    passes = 1
    new_optimizations = true
  }
}

animations {
  enabled = false

  bezier = linear, 0, 0, 1, 1
  bezier = easeOutCirc, 0, 0.55, 0.45, 1
  bezier = overshot, 0.05, 0.9, 0.1, 1.1

  animation = global, 1, 0.1, linear

  animation = windows, 1, 2, easeOutCirc, popin 98%
  animation = windowsOut, 1, 1, linear, popin 95%

  animation = fade, 1, 1, linear

  animation = border, 1, 5, default
  animation = workspaces, 1, 3, easeOutCirc, slide
}

dwindle {
  pseudotile = true
  preserve_split = true
  force_split = 1
}

master {
  new_status = slave;
  orientation = right
}

xwayland {
  use_nearest_neighbor = false
}

misc {
  disable_hyprland_logo = true
}
